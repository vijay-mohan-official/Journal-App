    <!--File Appender doesn't provide rotation and creation of new files, hence we use Rolling File Appender-->
    <appender name="myFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--Name of log file to be generated by File Appender-->
        <file>
            journalApp.log
        </file>
        <!--We need to specify on what condition the log file should rotate -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!--Generated files should have a unique name so appending date and time stamps with name-->
            <fileNamePattern>journalApp-%d{yyyy-MM-dd_HH-mm}.%i.log</fileNamePattern>
            <!--New file will be created when size of log file becomes 10MB-->
            <maxFileSize>10MB</maxFileSize>
            <!--Keep history, if exceeds 10 log files, then delete the oldest one, only keep 10 files in the system-->
            <maxHistory>10</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>
    <!--Mentioning that from root level itself we'll be logging upto level INFO-->
    <root level="INFO">
        <!--Using created appender-->
        <appender-ref ref="myConsoleAppender"/>
        <appender-ref ref="myFileAppender"/>
    </root>

</configuration>